@if (Model != null)
{
    <div class="container product-page">
        <div class="row justify-content-center">
            <!-- Product Image -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <img src="@Model.Thumbnail" alt="@Model.ProductName" class="card-img-top img-fluid rounded">
                </div>
            </div>

            <!-- Product Details -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0 p-4">
                    <h1 class="display-4 text-primary">@Model.ProductName</h1>
                    <h3 class="text-muted">Product Code: @Model.ProductCode</h3>

                    <p class="text-muted mt-3">@Model.description</p>

                    <h4 class="product-price mt-4">@Model.UnitPrice.ToString("C")</h4>

                    <!-- Add to Cart Button -->
                    <div class="mt-4">
                        @* <button type="button" class="btn btn-lg btn-primary w-100">Add to Cart</button> *@
                        <button type="button" class="btn btn-primary btn-sm btnCart" data-name="@Model.ProductName" data-price="@Model.UnitPrice" data-pk="@Model.ProductItemId"><i class="fa fa-shopping-cart"></i> CART</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container text-center mt-5">
        <h2>No product found</h2>
    </div>
}
